BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_text
            text: ''
            font_size: 48
            on_text: app.handle_convert(self.text)
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(input_text.text, 1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(input_text.text, -1)
#    Button:
#        text: 'Convert miles to km'
#        on_press: app.handle_convert(input_text.text)
    Label:
        id: output_label
        text: app.output_km
        font_size: 48
        color: (1, 1, 0, 1)